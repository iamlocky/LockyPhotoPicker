<?xml version="1.0" encoding="utf-8"?>

<cn.lockyluo.photopicker.widget.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:layout_margin="@dimen/__picker_margin"
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/__picker_bg_material_item"
        android:clickable="true"
        android:gravity="center"
        android:padding="15dp"
        android:backgroundTint="@color/__picker_gray_f2f"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/__picker_add_image" />

</cn.lockyluo.photopicker.widget.SquareItemLayout>

